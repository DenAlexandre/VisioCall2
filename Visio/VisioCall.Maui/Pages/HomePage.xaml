<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pm="clr-namespace:VisioCall.Maui.PageModels"
             xmlns:models="clr-namespace:VisioCall.Shared.Models;assembly=VisioCall.Shared"
             x:Class="VisioCall.Maui.Pages.HomePage"
             x:DataType="pm:HomePageModel"
             Title="VisioCall">

    <Grid RowDefinitions="Auto,*,Auto" Padding="15">

        <Label Text="Online Users" FontSize="22" FontAttributes="Bold"
               Grid.Row="0" Margin="0,10" />

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding OnlineUsers}"
                        EmptyView="No users online">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:UserInfo">
                    <Frame Padding="15" Margin="0,5" CornerRadius="8"
                           BorderColor="LightGray" HasShadow="False">
                        <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout>
                                <Label Text="{Binding DisplayName}" FontSize="18" FontAttributes="Bold" />
                                <Label Text="{Binding UserId}" FontSize="13" TextColor="Gray" />
                            </VerticalStackLayout>
                            <Button Grid.Column="1" Text="Call"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type pm:HomePageModel}}, Path=CallUserCommand}"
                                    CommandParameter="{Binding .}"
                                    WidthRequest="80" HeightRequest="40"
                                    Padding="5" FontSize="14" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Grid.Row="2" Text="Refresh"
                Command="{Binding LoadUsersCommand}"
                Margin="0,10" />

        <Label Grid.Row="2" Text="{Binding StatusMessage}"
               TextColor="Gray" FontSize="12"
               VerticalOptions="End" HorizontalOptions="Center"
               Margin="0,0,0,5" />
    </Grid>
</ContentPage>
